<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF9933"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ranking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/pl"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_ava"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_group_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/phuongtay"
                android:gravity="bottom"
                android:text="Nguyễn Phương Nam"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_point"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/vbodonp2"
                android:text="Point: 0"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>