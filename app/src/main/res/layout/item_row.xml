<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/txt_ranking"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/pl"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:text="1"
        android:textAlignment="viewEnd"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_ava"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_group_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/phuongtay"
            android:gravity="bottom"
            android:text="Nguyễn Phương Nam"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/vbodonp2"
            android:text="Point: 0"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>